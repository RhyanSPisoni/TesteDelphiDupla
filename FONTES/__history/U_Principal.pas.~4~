type
  TFrmPrincipal = class(TForm)
    BitBtn1: TBitBtn;
    procedure FecharClick(Sender: TObject);
    procedure Sair1Click(Sender: TObject);
    procedure BitBtn1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

